<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/diagram"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/storyTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_margin="15dp"
        android:text="@string/T1_story"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:textSize="25sp" />

    <Button
        android:id="@+id/buttonTop"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="@string/T1_Ans1"
        android:background="#B42D03"
        android:textSize="15dp"
        android:textColor="#ffffff"
        android:layout_above="@+id/buttonBottom"/>

    <Button
        android:id="@+id/buttonBottom"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_margin="15dp"
        android:text="@string/T1_Ans2"
        android:background="#098CC7"
        android:textSize="15sp"
        android:textColor="#ffffff"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>